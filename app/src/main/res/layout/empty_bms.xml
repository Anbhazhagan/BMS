<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/logo_margin"
        />
    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_logo"
        android:layout_margin="@dimen/login_text_margin"
        android:paddingLeft="@dimen/login_text_padding_left"
        android:paddingRight="@dimen/login_text_padding_right"
        android:paddingTop="@dimen/login_text_padding_top"
        android:paddingBottom="@dimen/login_text_padding_bottom"
        android:hint="@string/username_hint"/>
    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/logo_margin"
        android:paddingLeft="@dimen/login_text_padding_left"
        android:paddingRight="@dimen/login_text_padding_right"
        android:paddingTop="@dimen/login_text_padding_top"
        android:paddingBottom="@dimen/login_text_padding_bottom"
        android:layout_below="@id/et_username"
        android:hint="@string/password_hint"/>
    <Button
        android:background="@drawable/bg_btn_login"
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_password"
        android:text="@string/str_login"
        android:textAllCaps="false"
        android:textSize="@dimen/btn_login_text_size"
        android:layout_margin="@dimen/login_text_margin"
        android:paddingLeft="@dimen/login_text_padding_left"
        android:paddingRight="@dimen/login_text_padding_right"
        android:paddingTop="@dimen/login_text_padding_top"
        android:paddingBottom="@dimen/login_text_padding_bottom"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/btn_login_color"
        />
</RelativeLayout>